@using WebApplication.Models
@model List<FitnesCentar>
@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    <title>FitApp</title>
    @Styles.Render("~/Styles/MVCStyle.css")
</head>
<body>
    <h2>Fitnes centri</h2>
    <table border="1"">
        <tr class="tableRow">
            <th class="tableHeader">Naziv</th>
            <th class="tableHeader">Adresa</th>
            <th class="tableHeader">Godina otvaranja</th>
            <th class="tableHeader"></th>
        </tr>
        @foreach (FitnesCentar fc in Model)
        {
            <tr class="tableRow">
                <td class="tableData">@fc.Naziv</td>
                <td class="tableData">@fc.Adresa.ToString()</td>
                <td class="tableData">@fc.GodinaOtvaranja</td>
                <td >
                    <form action="~/Home/Details">
                        <button class="btn" name="fc" value="@fc.Naziv">Detalji</button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <br /><br /><br />
    <form action="Home/SortByNameAsc">
        <input class="btnSort" type="submit" value="Sortiraj po imenu rastuce" />
    </form>
    <form action="~/Home/SortByNameDesc">
        <input class="btnSort" type="submit" value="Sortiraj po imenu opadajuce" />
    </form>

    <form action="~/Home/SortByAddressAsc">
        <input class="btnSort" type="submit" value="Sortiraj po adresi rastuce" />
    </form>
    <form action="~/Home/SortByAddressDesc">
        <input class="btnSort" type="submit" value="Sortiraj po adresi opadajuce" />
    </form>

    <form action="~/Home/SortByYearAsc">
        <input class="btnSort" type="submit" value="Sortiraj po godini rastuce" />
    </form>
    <form action="~/Home/SortByYearDesc">
        <input class="btnSort" type="submit" value="Sortiraj po godini opadajuce" />
    </form>
    <br /><br />

    <form action="~/Home/SearchByName">
        <label for="searchByName">Search by name:</label>
        <input type="text" name="Naziv" placeholder="Gym name" />
        <button class="btn" id="searchByName">Search</button>
    </form>

    <form action="~/Home/SearchByAddress">
        <label for="searchByAddress">Search by address:</label>
        <input type="text" id="Ulica" name="Ulica" placeholder="Ulica" />
        <input type="text" id="Broj" name="Broj" placeholder="Broj" />
        <input type="text" id="Grad" name="Grad" placeholder="Grad" />
        <input type="text" id="PostanskiBroj" name="PostanskiBroj" placeholder="Postanski broj" />
        <button class="btn" id="searchByAddress">Search</button>
    </form>

    <form action="~/Home/SearchByYear">
        <label for="searchByYear">Search by year:</label>
        <input type="number" name="from" id="from" placeholder="From" />
        <input type="number" name="to" id="to" placeholder="To" />
        <button class="btn" id="searchByYear">Search</button>
    </form>

    <p class="kombinovanaPretraga">Kombinovana pretraga</p>
    <div>
        <form action="~/Home/KombinovanaPretraga">
            <input type="text" name="Naziv" placeholder="Naziv" />
            <input type="text" id="Ulica" name="Ulica" placeholder="Ulica" />
            <input type="text" id="Broj" name="Broj" placeholder="Broj" />
            <input type="text" id="Grad" name="Grad" placeholder="Grad" />
            <input type="number" name="from" id="from" placeholder="From" />
            <input type="number" name="to" id="to" placeholder="To" />
            <button class="btn btnKombinovano" id="kombinovanaPretraga">Pronadji</button>
        </form>
    </div>

</body>
</html>

